{
  "name": "localjudge",
  "displayName": "localjudge",
  "description": "To judge code without browser",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:localjudge.login",
    "onCommand:localjudge.run",
    "onCommand:localjudge.refreshLanguages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      { "command": "localjudge.login", "title": "LocalJudge: Login (Set Token)" },
      { "command": "localjudge.run", "title": "LocalJudge: Run (Judge)" },
      { "command": "localjudge.refreshLanguages", "title": "LocalJudge: Refresh Languages" }
    ],
    "configuration": {
      "title": "LocalJudge",
      "properties": {
        "localjudge.baseUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "Backend API base URL"
        },
        "localjudge.wait": {
          "type": "boolean",
          "default": true,
          "description": "Use wait=true for /code-judge/judge"
        },
        "localjudge.pollIntervalMs": {
          "type": "number",
          "default": 1000,
          "description": "Polling interval when wait=false"
        },
        "localjudge.pollTimeoutMs": {
          "type": "number",
          "default": 30000,
          "description": "Polling timeout when wait=false"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
